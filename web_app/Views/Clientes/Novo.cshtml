@using negocio.Models
@{
    
    ViewData["Title"] = "Novo Cliente";
}

<div class="text-center">
    <h1 class="display-4">Novo Cliente</h1>
</div>
<br />
<form action="/clientes/cadastrar" method="post">
  <div class="form-group">
    <label for="nome">Nome</label>
    <input name="nome" type="text" class="form-control" id="nome" placeholder="Escreva o Nome">
  </div>
  <br />
  <div class="form-group">
    <label for="email">Email</label>
    <input name="email" type="email" class="form-control" id="email" placeholder="Digite seu Email">
  </div>
  <br />
  <button type="submit" class="btn btn-primary">Enviar</button>
  <a href="/clientes" class="btn btn-secondary">Voltar</a>

</form>

